package Vector;

/**
 *
 * @author Макар
 */
public class Vector {
    public float i = 0.f;
    public float g = 0.f;
    
    public Vector ( float i, float g)
    {    
        this.i = i;
        this.g = g;
    }    
    public Vector add (Vector x)
    {
         return new Vector(this.i + x.i, this.g + x.g);
    }
}
