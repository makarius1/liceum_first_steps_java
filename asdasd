package asdasd;

/**
 *
 * @author Макар
 */
public class Asdasd {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        test_add();
        // TODO code application logic here
    }
    public static void test_add(){
        boolean function = true; // переменная 
        // задаем переменные
        for (int i = -100; i <= 100; i++){ 
            for (int g = -100; 100<= g; g++){
                Vector v1 = new Vector(i,g);// координаты вектора
                Vector v2 = new Vector (-1 * i, -1 * g); // обратные координаты
                Vector v3 = v1.add(v2); // сложение векторов
            if (( v3.i !=0) || (v3.g != 0)){
                function = false; // если не равно 0 то неправильно
            
            }
        }
    }       
        if (function){
           System.out.println("+"); // результат
    }
        else {
            System.out.println("-");
        }
        }
                
            }
    

